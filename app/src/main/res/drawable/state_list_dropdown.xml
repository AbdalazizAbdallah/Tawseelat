<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--     disabled state-->
    <item android:drawable="@drawable/img_keyboard_arrow_left" android:state_enabled="false" />
    <!-- pressed state -->
    <item android:drawable="@drawable/img_keyboard_arrow_down" android:state_enabled="true" android:state_pressed="true" android:state_window_focused="true" />
    <!-- unselected state -->
    <item android:drawable="@drawable/img_keyboard_arrow_left" android:state_enabled="true" android:state_window_focused="true" />
    <!-- dropdown list state -->
    <item android:drawable="@drawable/img_keyboard_arrow_down" android:state_enabled="true" android:state_focused="true" />
    <!-- default -->
    <item android:drawable="@drawable/img_keyboard_arrow_down" />
</selector>