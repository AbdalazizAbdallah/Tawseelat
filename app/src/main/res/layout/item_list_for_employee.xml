<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d5dp"
        app:cardBackgroundColor="@color/my_purple_light"
        app:cardCornerRadius="@dimen/d15dp"
        app:cardElevation="@dimen/d0dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d15dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/d6dp">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_profile_appCompatImageView"
                    android:layout_width="@dimen/d70dp"
                    android:layout_height="@dimen/d70dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_user_profile" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile_circleImageView"
                    android:layout_width="@dimen/d70dp"
                    android:layout_height="@dimen/d70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar"
                    android:visibility="visible"
                    app:civ_border_color="@color/my_purple_Dark"
                    app:civ_border_width="@dimen/d1dp" />

            </FrameLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d5dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/name_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_employee_name_text"
                    android:textAppearance="?textAppearanceHeadline6"
                    android:textColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/phone_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_phone_text"
                    android:textAppearance="?textAppearanceBody2"
                    android:textColor="@color/black"
                    android:textDirection="locale" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>
</layout>