<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d6dp"
        android:background="@drawable/bg_layer_list_text_view"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="@dimen/d6dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d6dp"
            app:cardCornerRadius="@dimen/d50dp"
            app:cardElevation="@dimen/d0dp"
            app:strokeColor="@color/my_purple_Dark"
            app:strokeWidth="@dimen/d1dp">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:padding="@dimen/d6dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_scooter" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/companyName_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d6dp"
                android:layout_marginEnd="@dimen/d6dp"
                android:text="@string/demo_company_name_text"
                android:textAppearance="?textAppearanceHeadline6" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/companyLocation_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d6dp"
                android:layout_marginEnd="@dimen/d6dp"
                android:text="@string/demo_city_text"
                android:textAppearance="?textAppearanceBody2"
                android:textColor="@color/my_grey_color" />
        </LinearLayout>

    </LinearLayout>
</layout>