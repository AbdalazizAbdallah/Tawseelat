<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/d50dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_profile_appCompatImageView"
        android:layout_width="@dimen/d70dp"
        android:layout_height="@dimen/d70dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_user_profile" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile_circleImageView"
        android:layout_width="@dimen/d100dp"
        android:layout_height="@dimen/d100dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:civ_border_color="@color/my_purple_Dark"
        app:civ_border_width="@dimen/d1dp"
        app:srcCompat="@drawable/ic_user_profile" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/demo_client_name_text"
        android:textAppearance="?textAppearanceHeadline5"
        android:textColor="@color/black" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/d5dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/my_purple_Dark" />


</androidx.appcompat.widget.LinearLayoutCompat>